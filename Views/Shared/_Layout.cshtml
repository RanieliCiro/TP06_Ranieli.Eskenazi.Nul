@{
    var title = ViewData["Title"] ?? "Gestor de Tareas";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Gestor de Tareas</title>

    <link rel="stylesheet" href="/css/estilo.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" /> <!-- opcional -->
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <i class="fas fa-tasks"></i> Gestor de Tareas
            </div>
            <div class="nav-actions">
                <form asp-controller="Home" asp-action="Index" method="get">
                    <button type="submit" class="nav-btn"><i class="fas fa-home"></i> Inicio</button>
                </form>
                <form asp-controller="Tareas" asp-action="Index" method="get">
                    <button type="submit" class="nav-btn"><i class="fas fa-list"></i> Mis Tareas</button>
                </form>
                <form asp-controller="Home" asp-action="Logout" method="get">
                    <button type="submit" class="nav-btn"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</button>
                </form>
            </div>
        </div>
    </nav>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-bottom">
            <p>© @DateTime.Now.Year - Gestor de Tareas</p>
        </div>
    </footer>

    <script src="~/js/site.js"></script>
</body>
</html>