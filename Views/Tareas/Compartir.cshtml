@using Tp06.Models
@{
    ViewData["Title"] = "Compartir tarea";
    var tarea = (Tarea)ViewBag.Tarea;
}

<div class="container">
    <div class="header">
        <h1>Compartir tarea</h1>
        <p>Usuario con quien compartir</p>
    </div>

    <form asp-action="Compartir" asp-controller="Tareas" method="post" class="form">
        <input type="hidden" name="idTarea" value="@tarea.id" />

        <div class="form-group">
            <label for="nombreUsuario">Usuario(s)</label>
            <textarea id="nombreUsuario" name="nombreUsuario" class="form-control" required
                      placeholder="ej: juan, maria; pedro"></textarea>
        </div>

        <div class="actions-row">
            <button type="submit" class="btn btn-primary">Compartir</button>

            <button type="submit"
                    formmethod="get"
                    formaction="@Url.Action("Index","Tareas")"
                    formnovalidate
                    class="btn btn-secondary">
                Volver
            </button>
        </div>
    </form>
</div>
