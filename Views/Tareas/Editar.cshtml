@{
    ViewData["Title"] = "Editar Tarea";
    var tarea = ViewBag.Tarea as Tarea;
    if (tarea == null) { <text>No existe la tarea</text>; return; }
}

<div class="container">
    <div class="header">
        <h1>Editar Tarea</h1>
        <p>Modificá la información de la tarea</p>
    </div>

    <form asp-action="Editar" asp-controller="Tareas" method="post" class="form">
        <input type="hidden" name="id" value="@tarea.id" />

        <div class="form-group">
            <label for="descripcion">Descripción</label>
            <input type="text" id="descripcion" name="descripcion" required class="form-control" value="@tarea.descripcion" />
        </div>

        <div class="form-group">
            <label>
                <input type="checkbox" name="terminado" @(tarea.terminado ? "checked" : "") />
                Marcar como terminada
            </label>
        </div>

        <div class="actions-row">
            <button type="submit" class="btn btn-primary">Guardar cambios</button>
            <form asp-controller="Tareas" asp-action="Index" method="get" class="link-row">
                <button type="submit" class="btn btn-secondary">Cancelar</button>
            </form>
        </div>
    </form>
</div>