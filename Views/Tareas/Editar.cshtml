@using Tp06.Models
@{
    ViewData["Title"] = "Editar Tarea";
    var tarea = (Tarea)ViewBag.Tarea;
}

<div class="container">
    <div class="header">
        <h1>Editar Tarea</h1>
        <p>Actualizá la descripción y el estado</p>
    </div>

    <form asp-action="Editar" asp-controller="Tareas" method="post" class="form">
        <input type="hidden" name="id" value="@tarea.id" />

        <div class="form-group">
            <label for="descripcion">Descripción</label>
            <input id="descripcion"
                   name="descripcion"
                   class="form-control"
                   value="@tarea.descripcion"
                   required />
        </div>

        <div class="form-group">
            <label>
                <input type="checkbox"
                       name="terminado"
                       value="true"
                       @(tarea.terminado ? "checked" : "") />
                Marcar como terminada
            </label>
        </div>

        <div class="actions-row">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <button type="submit"
                    formmethod="get"
                    formaction="@Url.Action("Index","Tareas")"
                    class="btn btn-secondary">
                Cancelar
            </button>
        </div>
    </form>
</div>
