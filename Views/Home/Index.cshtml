@{
    ViewData["Title"] = "Acceso al Sistema";
}

<div class="container">
    <div class="header">
        <h1>Gestor de Tareas</h1>
        <p>Iniciá sesión o registrate para continuar</p>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-error">@ViewBag.Error</div>
    }

    <div class="auth-container">
        <div class="auth-section">
            <h2>Iniciar Sesión</h2>
            <form asp-action="Login" asp-controller="Home" method="post" class="form">
                <div class="form-group">
                    <label for="loginUsuario">Usuario</label>
                    <input type="text" id="loginUsuario" name="usuario" required class="form-control" />
                </div>
                <div class="form-group">
                    <label for="loginPassword">Contraseña</label>
                    <input type="password" id="loginPassword" name="contraseña" required class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
            </form>
        </div>

        <div class="auth-section">
            <h2>Registrarse</h2>
            <form asp-action="Registrarse" asp-controller="Home" method="post" class="form">
                <div class="form-group">
                    <label for="regUsuario">Usuario</label>
                    <input type="text" id="regUsuario" name="usuario" required class="form-control" />
                </div>
                <div class="form-group">
                    <label for="regPassword">Contraseña</label>
                    <input type="password" id="regPassword" name="contraseña" required class="form-control" />
                </div>
                <button type="submit" class="btn btn-secondary">Registrarse</button>
            </form>
        </div>
    </div>
</div>